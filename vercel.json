{
  "version": 2,
  "buildCommand": "cd frontend && npm install --legacy-peer-deps && npx vite build",
  "outputDirectory": "frontend/dist",
  "rewrites": [
    { "source": "/api/(.*)", "destination": "/api/index.py" },
    { "source": "/health", "destination": "/api/index.py" }
  ],
  "functions": {
    "api/index.py": {
      "maxDuration": 60
    }
  }
}
